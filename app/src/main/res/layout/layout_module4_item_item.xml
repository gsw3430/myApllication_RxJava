<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="@dimen/x365"
    android:layout_height="@dimen/x216"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="0px"
    card_view:cardMaxElevation="2px"
    card_view:cardUseCompatPadding="false"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x146">
            <ImageView
                android:id="@+id/module4_item_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/module4_item_big_icon"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id="@+id/module4_item_icon_bg"
                android:layout_width="@dimen/x85"
                android:layout_height="@dimen/x85"
                android:layout_centerInParent="true"
                android:src="@mipmap/none_image"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/module4_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:lines="1"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x24"/>

            <TextView
                android:id="@+id/module4_item_score"
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/x28"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:background="@drawable/score_label_bg"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>