<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/strong_updata"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_corners_bg"
            android:orientation="vertical">

        <com.vqsxb.widget.CollapsibleTextView
            android:id="@+id/tv_updata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#666666"
            android:textSize="16dp"
            android:maxLines="5"
            android:ellipsize="end"
            android:lineSpacingExtra="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/updata_do"
            android:layout_width="120dp"
            android:layout_height="28dp"
            android:background="@drawable/updata_corners_bg"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:textColor="#ffffff"
            android:lines="1"
            android:text="立即更新"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>